<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dbg"
    android:orientation="vertical"
 >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="448dp"
        android:orientation="vertical" >
    
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="New Record..!!"
        android:textColor="#000000"
        android:textSize="25dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/star1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/star2"
        android:layout_toLeftOf="@+id/star2"
        android:src="@drawable/starb" />

    <ImageView
        android:id="@+id/star3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/star2"
        android:layout_toRightOf="@+id/star2"
        android:src="@drawable/starb" />

    <TextView
        android:id="@+id/best"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView09"
        android:layout_alignBottom="@+id/TextView09"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/ansmoves"
        android:text="000" />

    <TextView
        android:id="@+id/TextView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/best"
        android:layout_alignBottom="@+id/best"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/TextView03"
        android:text="Best" />

    <TextView
        android:id="@+id/TextView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/worst"
        android:layout_alignBottom="@+id/worst"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/TextView12"
        android:text="Worst" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/average"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/average"
        android:layout_alignLeft="@+id/TextView11"
        android:text="Average" />

    <TextView
        android:id="@+id/TextView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:textColor="#000000"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="21dp"
        android:text="" />

    <TextView
        android:id="@+id/TextView09"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView10"
        android:textColor="#000000"
        android:layout_below="@+id/TextView10"
        android:layout_marginTop="15dp"
        android:text="" />

    <TextView
        android:id="@+id/TextView08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView09"
        android:layout_below="@+id/TextView09"
        android:textColor="#000000"
        android:layout_marginTop="14dp"
        android:text="" />

    <TextView
        android:id="@+id/TextView07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView08"
        android:layout_below="@+id/TextView08"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:text="" />

    <TextView
        android:id="@+id/worst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView08"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/TextView08"
        android:layout_alignLeft="@+id/star3"
        android:text="000" />

    <TextView
        android:id="@+id/average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView07"
        android:layout_alignBottom="@+id/TextView07"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/worst"
        android:text="000" />

    <TextView
        android:id="@+id/ansmoves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView10"
        android:layout_alignBottom="@+id/TextView10"
        android:layout_toRightOf="@+id/star2"
        android:textColor="#000000"
        android:text="000" />

    <TextView
        android:id="@+id/timecurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ansmoves"
        android:layout_alignBottom="@+id/ansmoves"
        android:textColor="#000000"
        android:layout_alignRight="@+id/ImageView04"
        android:text="00:00" />

    <TextView
        android:id="@+id/TextView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/best"
        android:layout_alignBottom="@+id/best"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/timecurrent"
        android:text="00:00"
        android:visibility="gone" />

    <TextView
        android:id="@+id/TextView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/worst"
        android:layout_alignBottom="@+id/worst"
        android:layout_alignLeft="@+id/TextView15"
        android:textColor="#000000"
        android:text="00:00"
        android:visibility="gone" />

    <TextView
        android:id="@+id/TextView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/average"
        android:layout_alignBottom="@+id/average"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/TextView14"
        android:text="00:00" 
		android:visibility="gone"/>
        
    <Button
        android:id="@+id/play"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/average"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="@drawable/restart" />

    <Button
        android:id="@+id/menu"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/play"
        android:layout_alignBottom="@+id/play"
        android:layout_alignLeft="@+id/TextView04"
        android:background="@drawable/menu" />

    <Button
        android:id="@+id/next"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/play"
        android:layout_alignRight="@+id/TextView07"
        android:background="@drawable/arrow" />

    <ImageView
        android:id="@+id/ImageView03"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/star2"
        android:layout_marginTop="48dp"
        android:layout_toRightOf="@+id/play"
        android:src="@drawable/moves" />

    <ImageView
        android:id="@+id/star2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:src="@drawable/starb" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/timecurrent"
        android:layout_alignBottom="@+id/timecurrent"
        android:layout_marginRight="24dp"
        android:layout_toLeftOf="@+id/ImageView04"
        android:text="Current"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ImageView03"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/star3"
        android:text=""
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/ImageView04"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/TextView10"
        android:layout_toLeftOf="@+id/play"
        android:src="@drawable/clock" />

    </RelativeLayout>
</ScrollView>
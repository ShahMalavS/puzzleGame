            android:scaleType="fitXY" />
        
        <ImageView
            android:id="@+id/part25"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="18"
            android:scaleType="fitXY" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/left"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/tscore"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@+id/score"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/right"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/score"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/score"
        android:visibility="visible" />

    <Button
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="  Best Score :            "
        android:textSize="20dp"
        android:background="@drawable/five"
        android:visibility="visible" />

    <Button
        android:id="@+id/ans"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/l5"
        android:layout_below="@+id/l5"
        android:layout_marginRight="29dp"
        android:layout_marginTop="38dp"
        android:text="000"
        android:background="@drawable/five"
        android:textSize="20dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/restart"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/l5"
        android:layout_alignTop="@+id/ans"
        android:layout_marginLeft="30dp"
        android:background="@drawable/restart"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/score"
        android:layout_alignBottom="@+id/score"
        android:layout_alignRight="@+id/score"
        android:layout_marginRight="14dp"
        android:text="000"
        android:textSize="20dp"
        android:visibility="visible" />
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:visibility="visible" />
    
    <Chronometer
        android:id="@+id/chronometer1"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/ans"
        android:layout_marginRight="23dp"
        android:layout_toLeftOf="@+id/ans"
        android:background="@drawable/three"
        android:gravity="center_horizontal|center_vertical"
        android:text="Chronometer" 
        android:visibility = "gone"/>

</RelativeLayout>
</ScrollView>
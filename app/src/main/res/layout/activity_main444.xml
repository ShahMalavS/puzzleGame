        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="14dp"
        android:layout_weight="18"
        android:scaleType="fitXY"
       />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:weightSum="100" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="6" />

        <ImageView
            android:id="@+id/part1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="18"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/part2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="18"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/part3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="18"
            android:scaleType="fitXY" />
        
        <ImageView
            android:id="@+id/part4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="18"
            android:scaleType="fitXY" />
        
        <ImageView
            android:id="@+id/part5"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="18"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="90dp"
        android:visibility="gone"
        android:weightSum="100" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="6" />

        <ImageView
            android:id="@+id/part6"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="18"
            android:scaleType="fitXY" />
        
         <ImageView
            android:id="@+id/part7"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="18"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/part8"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="18"
            android:scaleType="fitXY" />
         <ImageView
            android:id="@+id/part9"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="18"
            android:scaleType="fitXY" />
        
        <ImageView
            android:id="@+id/part10"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="18"
            android:scaleType="fitXY" />
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="150dp"
        android:visibility="gone"
        android:weightSum="100" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="6" />
     
        <ImageView
            android:id="@+id/part11"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="18"
            android:scaleType="fitXY" />
        
        <ImageView
            android:id="@+id/part12"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="18"
            android:scaleType="fitXY" />
        <ImageView

            android:layout_weight="18"
            android:scaleType="fitXY" />
        
        <ImageView
            android:id="@+id/part15"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="18"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l4"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="210dp"
        android:visibility="gone"
        android:weightSum="100" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="6" />
 
        <ImageView
            android:id="@+id/part16"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="18"
            android:scaleType="fitXY" />
        
        <ImageView
            android:id="@+id/part17"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="18"
            android:scaleType="fitXY" />
        
        <ImageView
            android:id="@+id/part18"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="18"
            android:scaleType="fitXY" />
        
        <ImageView
            android:id="@+id/part19"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="18"
            android:scaleType="fitXY" />
        
        <ImageView
            android:id="@+id/part20"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="18"
            android:scaleType="fitXY" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/l5"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="270dp"
        android:visibility="gone"
        android:weightSum="100" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="6" />
 
        <ImageView
            android:id="@+id/part21"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="18"
            android:scaleType="fitXY" />
        
        <ImageView
            android:id="@+id/part22"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="18"
            android:scaleType="fitXY" />
        
        <ImageView
            android:id="@+id/part23"
            android:layout_width="0dp"

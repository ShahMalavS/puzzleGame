<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:background="@drawable/dbg" >

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Reset Best Moves"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/soundbut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/but"
        android:layout_alignBottom="@+id/but"
        android:layout_alignRight="@+id/reset"
        android:text="On" />

    <TextView
        android:id="@+id/but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reset"
        android:layout_marginBottom="51dp"
        android:layout_marginRight="32dp"
        android:layout_toLeftOf="@+id/soundbut"
        android:text="Sound"
        android:textColor="#ffffff"
        android:textSize="20dp" />

</RelativeLayout>